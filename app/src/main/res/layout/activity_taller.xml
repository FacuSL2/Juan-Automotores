<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@drawable/topinclinado"
    tools:context=".Taller">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:padding="5dp"
        app:cardCornerRadius="5dp"
        android:layout_margin="30dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/foto"
                >

            </ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ID:"
                android:textStyle="bold"
                android:textSize="20sp"
                android:id="@+id/txtidt"
                android:layout_marginBottom="10dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Modelo: "
                android:textStyle="bold"
                android:textSize="20sp"
                android:id="@+id/txtnamet"
                android:layout_marginBottom="10dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Año:"
                android:textStyle="bold"
                android:textSize="20sp"
                android:id="@+id/txtemailt"
                android:layout_marginBottom="10dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Color:"
                android:textStyle="bold"
                android:textSize="20sp"
                android:id="@+id/txcontactt"
                android:layout_marginBottom="10dp"
                />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
    </LinearLayout>

    <Button
        android:id="@+id/agregarficha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="@color/azul"
        android:text="Ver Fichas Técnicas" />

</LinearLayout>